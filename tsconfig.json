{
    "compilerOptions": {
        "jsx": "react",
        "jsxFactory": "Cemjsx",
        "jsxFragmentFactory": "CemjsxFragment",
        "module": "ES2022",
        "target": "ES2022",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "@src/*": [
                "./src/*"
            ],
            "@assets/*": [
                "./src/assets/*"
            ],
            "@images/*": [
                "./src/assets/images/*"
            ],
            "@svg/*": [
                "./src/assets/svg/*.svg"
            ],
        },
    },
    "files": [
        "src/index.ts",
        "src/display.tsx",
        "src/loader.ts"
    ],
    "include": [
        "global.d.ts"
    ]
}